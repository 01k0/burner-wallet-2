{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["es6", "dom"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "sourceMap": false,
    "strict": true
  }
}
